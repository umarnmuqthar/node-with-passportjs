<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LoPeZ</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>

  <body class="bg-dark text-light align-items-center justify-content-center">
    
    <!-- main section -->
    <main
      class="container mt-5 d-flex flex-column align-items-center justify-content-center"
      style="height: 80vh"
    >
      <h2 class="mb-3 text-center">Login</h2>
      <div class="card text-dark" style="width: 25rem">
        <div class="card-body">
          <form method="POST" action="/login">
            <div class="mb-3 col-12 col-md-">
              <label for="email" class="form-label">Email</label>
              <input
                name="email"
                type="email"
                class="form-control"
                id="email"
                required
              />
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                name="password"
                type="password"
                class="form-control"
                id="password"
                required
              />
            </div>
            <div class="mb-3">
              <button class="btn btn-outline-dark" type="submit">Log in</button>
            </div>
          </form>
        </div>
      </div>
      <!--  -->
    </main>
    <% if (messages.error) { %> <%= messages.error %> <% } %>

    <!-- bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
